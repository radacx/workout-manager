<UserControl x:Class="WorkoutManager.App.Pages.Progress.Dialogs.SelectFilterDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:models="clr-namespace:WorkoutManager.App.Pages.Progress.Models"
        xmlns:dialogs="clr-namespace:WorkoutManager.App.Pages.Progress.Dialogs"
        xmlns:dialog="clr-namespace:WorkoutManager.App.Controls.Dialog"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=models:SelectFilterDialogViewModel}">
    <dialog:Dialog
        SubmitButtonTitle="{Binding SubmitButtonTitle}"
        DialogTitle="{Binding DialogTitle}"
    >
        <ItemsControl ItemsSource="{Binding Filters}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        
                        <Button
                            Content="Select"
                            Command="{Binding DataContext.SelectFilter, RelativeSource={RelativeSource FindAncestor,
                                AncestorType=dialogs:SelectFilterDialog}}"
                            CommandParameter="{Binding}"
                            IsDefault="True"
                        />
                        
                        <Button
                            Content="Remove"
                            Command="{Binding DataContext.RemoveFilter, RelativeSource={RelativeSource FindAncestor,
                                AncestorType=dialogs:SelectFilterDialog}}"
                            CommandParameter="{Binding}"
                        />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </dialog:Dialog>
</UserControl>
