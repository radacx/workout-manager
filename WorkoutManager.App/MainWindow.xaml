<Window x:Class="WorkoutManager.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WorkoutManager.App.Exercises.Views"
        xmlns:models="clr-namespace:WorkoutManager.App.Exercises.Models"
        xmlns:exercises="clr-namespace:WorkoutManager.App.Exercises"
        xmlns:trainingLog="clr-namespace:WorkoutManager.App.TrainingLog"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=models:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <TabControl>
            <TabItem Header="Exercises">
                <views:ExercisesPage DataContext="{Binding ExercisesPage}" />
            </TabItem>
            <TabItem Header="Motions">
                <exercises:MotionsPage DataContext="{Binding MotionsPage}" />
            </TabItem>
            <TabItem Header="Muscle groups">
                <exercises:MuscleGroupsPage DataContext="{Binding MuscleGroupsPage}" />
            </TabItem>
            <TabItem Header="Training log">
                <trainingLog:TrainingLogPage DataContext="{Binding TrainingLogPage}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
